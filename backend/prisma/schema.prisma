generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  role      Role        @default(CANDIDAT)
  sujetUser SujetUser[]
}

enum Role {
  CANDIDAT
  ADMIN
  ENCADTANT
  ENCADTANT_ACC
}

model Sujet {
  id          Int    @id @default(autoincrement())
  titre       String @unique
  description String

  sujetUser SujetUser[]
}

model SujetUser {
  id      Int   @id @default(autoincrement())
  userId  Int
  sujetId Int
  user    User  @relation(fields: [userId], references: [id])
  sujet   Sujet @relation(fields: [sujetId], references: [id])

  @@unique([userId, sujetId])
}
